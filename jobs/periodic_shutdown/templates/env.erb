[ -z "$DEBUG" ] || set -x

export PERIODIC_SHUTDOWN_RUN_DIR=/var/vcap/sys/run/periodic_shutdown
export PERIODIC_SHUTDOWN_LOG_DIR=/var/vcap/sys/log/periodic_shutdown
export PERIODIC_SHUTDOWN_PID_FILE="$PERIODIC_SHUTDOWN_RUN_DIR/pid"

export PERIODIC_SHUTDOWN_INTERVAL_IN_SECONDS=<%= p("periodic_shutdown.interval_in_seconds").to_i %>

export RABBITMQ_ENV="<%= link("rabbitmq-server").p("rabbitmq-server.env") %>"

export PATH="/var/vcap/jobs/periodic_shutdown/bin:$PATH"
